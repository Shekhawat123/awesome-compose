server {
    listen       80;
    server_name  localhost;
    location / {
        proxy_pass   http://backend:8000;
    }

}

server {
    listen 8080;
    server_name localhost;

    location /nginx_status {
        stub_status;
        access_log off;
        allow 127.0.0.1;       # Optional: tighten access
        allow proxy;           # Allow internal Docker access via service name
        deny all;              # Block everyone else
    }
}
